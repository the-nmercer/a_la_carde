<h1><%= @product.name %></h1>

<div class="product-details">
  <p><%= @product.description %></p>
  <p><strong>Price:</strong> $<%= @product.price %></p>

  <!-- Display stock quantity -->
  <p><strong>Stock:</strong> <%= @product.stock_quantity %> available</p>

  <% if @product.image.attached? %>
    <div class="product-image">
      <%= image_tag @product.image %>
    </div>
  <% else %>
    <p>No image available</p>
  <% end %>

  <%= form_with url: add_to_cart_cart_index_path, method: :post do |form| %> <!-- Use the correct path helper -->
    <%= hidden_field_tag :product_id, @product.id %>  <!-- ID of the product -->
    <%= number_field_tag :quantity, 1, min: 1 %>  <!-- Quantity -->
    <%= submit_tag "Add to Cart" %>
  <% end %>

  <%= link_to 'Back to Products', products_path, class: 'back-link' %>
</div>
